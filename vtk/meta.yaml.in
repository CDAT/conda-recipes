package:
  name: vtk
  version: uvcdat

source:
    git_rev: uvcdat-master
    git_url: git://github.com/UV-CDAT/VTK.git

    #  patches:
    #    - dlls.patch                              [win]
    #    - apple.patch                             [osx]

build:
  string: uvcdat_master
  has_prefix_files:                           [win]
    - Lib/site-packages/vtk/__init__.py       [win]

requirements:
  build:
    - cmake
    - python
    - proj4
    - hdf5
    - ffmpeg
    - mesalib                                 [linux] {mesa}
  run:
    - python
    - proj4
    - hdf5
    - ffmpeg

about:
  home: http://www.vtk.org/
  license: BSD
  summary: VTK is an open-source, freely available software system for 3D computer graphics
