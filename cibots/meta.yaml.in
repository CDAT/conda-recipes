package:
    name: cibots
    version: @VERSION@

source:
    git_url: https://github.com/UV-CDAT/ci-bots.git
    git_rev: @UVCDAT_BRANCH@
    
build:
  number: @BUILD_NUMBER@ 
  skip: True  # [win]
  script: python setup.py install
  noarch: python

requirements:
  build:
    - python
    - setuptools
  run:
    - python
    - requests

test:
  command:
    - python run_tests.py -v2

about:
    home:  http://github.com/UV-CDAT/ci-bots
    license: 'CCLRC'
    summary: 'Continuous Integration Tools'

extra:
  recipe-maintainers:
    - doutriaux1
