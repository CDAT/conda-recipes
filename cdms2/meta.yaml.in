package:
    name: cdms2
    version: @VERSION@

source:
    git_rev: @UVCDAT_BRANCH@
    git_url: git://github.com/UV-CDAT/cdms.git

build:
  number: @BUILD_NUMBER@
 
requirements:
  build:
    - toolchain [osx]
    - python {{ python }}
    - setuptools
    - libcdms
    - cdat_info
    - numpy {{ numpy }}.*
    - esmf >=7
    - libdrs_f
    - gcc [linux]
    - libgcc [linux]
  run:
    - python {{ python }}
    - libcf
    - distarray
    - cdtime
    - libcdms
    - cdat_info
    - numpy {{ numpy }}.*
    - esmf >=7
    - esmpy
    - libdrs_f
    - pyopenssl
    - gcc [linux]
    - libgcc [linux]

about:
    home:  http://gitub.com/UV-CDAT/cdms



