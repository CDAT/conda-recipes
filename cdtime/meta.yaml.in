package:
    name: cdtime
    version: @VERSION@.np{{ numpy }}

source:
    git_rev: @UVCDAT_BRANCH@
    git_url: git://github.com/CDAT/cdtime.git

build:
  number: @BUILD_NUMBER@
 
requirements:
  build:
    - python {{ python }}
    - setuptools
    - libcdms
    - numpy {{ numpy }}.*
    - cdat_info
    - libdrs_f
    - toolchain
    - libgfortran
  run:
    - python {{ python }}
    - setuptools
    - libcdms
    - cdat_info
    - libdrs_f
    - libgfortran
    - numpy  {{ numpy }}.*

about:
    home:  http://gitub.com/CDAT/cdtime

