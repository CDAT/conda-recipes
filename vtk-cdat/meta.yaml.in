{% set build_number = @BUILD_NUMBER@ %}

package:
  name: vtk-cdat
  version: {{ environ['GIT_DESCRIBE_TAG'][1:] ~ "." ~ environ['GIT_DESCRIBE_NUMBER']}}.@VERSION@

source:
  # git_branch: master
  # git_url: https://gitlab.kitware.com/vtk/vtk.git
  git_branch: python-optional-link
  git_url: https://gitlab.kitware.com/ben.boeckel/VTK.git

build:
  number: {{ build_number }}
  features:
    - mesalib  # [VTK_WITH_OSMESA]


requirements:
  build:
    - {{ compiler('cxx') }} # [osx]   # clang 4.0.1
    # expect cmake >= 3.13 installed on root conda
    - ninja

  host:
    # this matches compiler("cxx") version gcc 7.3.0
    - toolchain3 # [linux]
    - python {{python}}
    - numpy
    - ffmpeg
    # needed by ffmpeg for nice videos
    - x264
    - mesalib  # [VTK_WITH_OSMESA]

  run:
    - toolchain3 # [linux]
    - python
    - numpy
    - future
    - ffmpeg
    # needed by ffmpeg for nice videos
    - x264
    - mesalib # [VTK_WITH_OSMESA]

test:
    imports:
        - vtk

about:
    home: http://www.vtk.org/
    license: BSD 3-Clause
    license_file: Copyright.txt
    summary:
        The Visualization Toolkit (VTK) is an open-source, freely available software
        system for 3D computer graphics, modeling, image processing, volume
        rendering, scientific visualization, and information visualization.

extra:
    recipe-maintainers:
        - doutriaux1
        - sankhesh
        - danlipsa
