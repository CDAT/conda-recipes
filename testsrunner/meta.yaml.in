{% set name = "testsrunner" %}

package:
  name: {{ name|lower }}
  version: @VERSION@

source:
    git_rev: @UVCDAT_BRANCH@
    git_url: git://github.com/cdat/testsrunner.git

build:
  number: 0
  skip: True  # [win]
  script: python setup.py install

requirements:
  build:
    - python
    - setuptools
  run:
    - python
    - requests
    - jinja2
    - cdp

test:
  imports:
    - testsrunner

about:
  home:  http://github.com/cdat/testsrunner
  license: CCLRC
  license_file: LEGAL.txt
  summary: 'Generic Test Suite Runner"
  description: |                                                                                                                                             
  A set of tools to run nose-based test suites and generate reports

extra:
  recipe-maintainers:
    - doutriaux1
